@model IEnumerable<UserIdentity.Models.TrainerAsign>

@{
    ViewBag.Title = "Index";
}

<h2>List Trainer Asigns</h2>

@if (Roles.IsUserInRole(User.Identity.Name, "Staff"))
{
    <p class="btn btn-danger">
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TopicID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerID)
        </th>
        <th>
            <p>Functions</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TrainerAsignID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TrainerAsignID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TrainerAsignID })
            </td>
        </tr>
    }

</table>
