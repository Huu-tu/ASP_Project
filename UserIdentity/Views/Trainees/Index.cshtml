@model IEnumerable<UserIdentity.Models.Trainee>

@{
    ViewBag.Title = "Index";

}

<h2>List Trainees</h2>
@if (Roles.IsUserInRole(User.Identity.Name, "Staff"))
{
    <p class="btn btn-danger">
        @Html.ActionLink("Create New", "Create")
    </p>
}

@using (Html.BeginForm("Index", "Trainees", FormMethod.Get))
{
    @Html.TextBox("searchString")
    <input type="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TOEIC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            <p>Function</p>
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="7" style="color:red">
                No Match Any Document
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TOEIC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>

                    @if (Roles.IsUserInRole(User.Identity.Name, "Staff"))
                    {
                        <td class="btn btn-default">
                            @Html.ActionLink("Details", "Details", new { id = item.TraineeID })

                        </td>
                        <td class="btn btn-success">
                            @Html.ActionLink("Edit", "Edit", new { id = item.TraineeID })
                        </td>
                        <td class="btn btn-danger">
                            @Html.ActionLink("Delete", "Delete", new { id = item.TraineeID })
                        </td>

                    }
                    else
                    {
                        <td class="btn btn-default">
                            @Html.ActionLink("Details", "Details", new { id = item.TraineeID })

                        </td>
                    }

                </tr>
        }
    }

        </table>
